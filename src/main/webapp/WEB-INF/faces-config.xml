<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Config</base-name>
            <var>config</var>
        </resource-bundle>
       <locale-config>
            <default-locale>es</default-locale>
       </locale-config>
    </application>
    <managed-bean>
        <description>Bean de respaldo para gestionar las entidades Parametrica y TipoParam</description>
        <managed-bean-name>mbParametrica</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbParametrica</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para gestionar las entidades ZonaIntervencion y SubZona</description>
        <managed-bean-name>mbZona</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbZona</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para las paramétricas de guìas: TipoGuia y EstadoGuia</description>
        <managed-bean-name>mbParamGuia</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbParamGuia</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para la gestión de Estados de una Autorización</description>
        <managed-bean-name>mbEstadoAut</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbEstadoAut</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de gestión de Usuarios</description>
        <managed-bean-name>mbUsuario</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbUsuario</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para la gestión de las entidades vinculadas a los productos forestales: Unidades de medida, Clases, Especies locales y Productos</description>
        <managed-bean-name>mbProducto</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbProducto</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para el manejo de Inuebles</description>
        <managed-bean-name>mbInmueble</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbInmueble</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para operar las personas vinculadas a una Autorización y a una Guía.</description>
        <managed-bean-name>mbPersona</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbPersona</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para la gestión de Autorizaciones</description>
        <managed-bean-name>mbAutorizacion</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbAutorizacion</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para la gestión de Guías</description>
        <managed-bean-name>mbGuia</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbGuia</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para la gestión de la sesión del usuario</description>
        <managed-bean-name>mbSesion</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbSesion</managed-bean-class>
    
        <managed-bean-scope>session</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de gestión de la vista infoGral.xhtml para la edición del texto de información general a ver en la portada</description>
        <managed-bean-name>mbInfoGral</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbInfoGral</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope></managed-bean>
    <managed-bean>
        <managed-bean-name>mbReporte</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbReporte</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean de respaldo para la gestión de Certificados</description>
        <managed-bean-name>mbCert</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbCert</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <managed-bean-name>mbGuia1</managed-bean-name>
        <managed-bean-class>ar.gob.ambiente.sacvebio.cre.mb.MbGuia</managed-bean-class>
    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
</faces-config>
